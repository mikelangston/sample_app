<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<%= csrf_meta_tag %>
	<%= stylesheet_link_tag "application", media: "all" %>
</head>
<body>
	<%= render 'layouts/nav' %>

	<div class="wrapper">
		<% flash.each do |key, value| %>
			<div class="container">
				<div class="flash <%= key %>"><%= value %></div>
			</div>
		<% end %>
		<%= yield %>
	</div>

	<%= render 'layouts/footer' %>
	<%= debug(params) if Rails.env.development? %> <!-- Only debug if in development -->
	<%= javascript_include_tag "application" %>
</body>
</html>